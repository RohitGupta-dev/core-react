<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        header {
            width: 100%;
            padding: 10px;
            background-color: yellow;
            color: white;
        }

        footer {
            width: 100%;
            padding: 10px;
            background-color: black;
            color: white;
        }
    </style>
</head>
<body>
    <div>
        <header>
            <h1>This is a header</h1>
        </header>
        @RenderBody()
        <footer>
            <h1>this is footer</h1>
        </footer>
    </div>
</body>
</html>