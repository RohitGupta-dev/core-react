    <input asp-for="Married" placeholder="Enter Married" class="form-control" />
    <br /> *@
   @* <label asp-for="Description">Enter Description :</label>
    <input asp-for="Description" placeholder="Enter Description" class="form-control" />
    <br /> *@
    <label asp-for="Description">Enter Description :</label>
    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Enter Description" >

    </textarea>
<br />
<input type="submit" value="submit" class="btn btn-outline-primary" />
</form>